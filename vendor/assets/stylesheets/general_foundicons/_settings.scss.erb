$fontName: "GeneralFoundicons";
$classPrefix: "foundicon-";

@mixin i-class($name,$pua) {
  .#{$classPrefix}#{$name}:before {
    content: "\f#{$pua}";
  }
}

@mixin ie-class($name,$pua) {
  .#{$classPrefix}#{$name} {
    *zoom: expression( this.runtimeStyle['zoom'] = "1", this.innerHTML = "&#xf#{$pua};");
  }
}

@mixin face {
  @font-face {
    font-family: $fontName;
    src: url('<%= asset_path('general_foundicons.eot') %>?#iefix') format('embedded-opentype'),
         url('<%= asset_path('general_foundicons.woff') %>') format('woff'),
         url('<%= asset_path('general_foundicons.ttf') %>') format('truetype');
    font-weight: normal;
    font-style: normal;
  }
}
